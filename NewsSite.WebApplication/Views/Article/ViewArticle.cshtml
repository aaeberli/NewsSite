@model NewsSite.WebApplication.Models.ArticleViewModel

@{
    ViewBag.Title = "View Article";
}

<h2>View Article</h2>

<hr />
<div class="form-group">
    @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.LabelFor(m => m.Title, Model.Title, new { @class = "col-md-4 form-control" })
    </div>
    @Html.LabelFor(m => m.Body, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextAreaFor(m => m.Body, new { @class = "col-md-4 form-control", rows = "10", disabled = "disabled" })
    </div>
</div>
<div class="form-group">

    <a href="@Url.Action("EditArticle","Article",new { articleId = Model.Id })" class="btn btn-info" role="button">Edit</a>
    <a href="@Url.Action("EditArticle","Article",new { articleId = Model.Id })" class="btn btn-info" role="button">Like</a>
       
</div>
